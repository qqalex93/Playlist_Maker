<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ActivityMain">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="ActivitySearch" parent="ActivityMain">
        <item name="android:background">@color/black</item>
    </style>

    <style name="ActivitySettings" parent="ActivityMain">
        <item name="android:background">@color/black</item>
    </style>

    <style name="ActivityMedia" parent="ActivityMain">
        <item name="android:background">@color/black</item>
    </style>

    <style name="TrackStyle" parent="ActivityMain">
        <item name="android:background">@color/black</item>
    </style>

    <style name="SettingButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="textAllCaps">false</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black</item>
        <item name="cornerRadius">@dimen/corner_radius_16</item>
    </style>

    <style name="ThemeSwitch" parent="Widget.Material3.CompoundButton.Switch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">@dimen/value_20</item>
        <item name="android:paddingHorizontal">@dimen/value_16</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="thumbTint">@color/switch_thumb_color</item>
        <item name="trackTint">@color/switch_track_color</item>
    </style>

    <style name="Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="navigationIconTint">@color/white</item>
    </style>

    <style name="ToolbarTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SettingTextView" parent="TrackText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">@dimen/value_20</item>
        <item name="android:paddingHorizontal">@dimen/value_16</item>
        <item name="android:fillColor">@color/white</item>
    </style>

    <style name="TrackText">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SmallTrackText" parent="TrackText">
        <item name="android:textSize">@dimen/text_size_11</item>
    </style>

    <style name="IconStyle">
        <item name="android:tint">@color/white</item>
    </style>

</resources>